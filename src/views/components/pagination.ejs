<% if (totalPages > 1) { %>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <%# Bottone Precedente %>
    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %><% if (typeof currentReparto !== 'undefined' && currentReparto) { %>&reparto=<%= currentReparto %><% } %><% if (typeof currentTipo !== 'undefined' && currentTipo) { %>&tipo=<%= currentTipo %><% } %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Precedente</span>
        </a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Precedente</span>
        </a>
      </li>
    <% } %>

    <%# Numeri di Pagina %>
    <%# Logica per mostrare un numero limitato di pagine (es. 5 numeri intorno alla pagina corrente) %>
    <% const maxPagesToShow = 5; %>
    <% let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2)); %>
    <% let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1); %>
    <% if (endPage - startPage + 1 < maxPagesToShow && startPage > 1) { %>
        <% startPage = Math.max(1, endPage - maxPagesToShow + 1); %>
    <% } %>

    <%# Puntini iniziali se necessario %>
    <% if (startPage > 1) { %>
        <li class="page-item"><a class="page-link" href="?page=1&limit=<%= limit %><% if (typeof currentReparto !== 'undefined' && currentReparto) { %>&reparto=<%= currentReparto %><% } %><% if (typeof currentTipo !== 'undefined' && currentTipo) { %>&tipo=<%= currentTipo %><% } %>">1</a></li>
        <% if (startPage > 2) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
        <% } %>
    <% } %>

    <% for (let i = startPage; i <= endPage; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %><% if (typeof currentReparto !== 'undefined' && currentReparto) { %>&reparto=<%= currentReparto %><% } %><% if (typeof currentTipo !== 'undefined' && currentTipo) { %>&tipo=<%= currentTipo %><% } %>"><%= i %></a>
      </li>
    <% } %>

    <%# Puntini finali se necessario %>
    <% if (endPage < totalPages) { %>
        <% if (endPage < totalPages - 1) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="?page=<%= totalPages %>&limit=<%= limit %><% if (typeof currentReparto !== 'undefined' && currentReparto) { %>&reparto=<%= currentReparto %><% } %><% if (typeof currentTipo !== 'undefined' && currentTipo) { %>&tipo=<%= currentTipo %><% } %>"><%= totalPages %></a></li>
    <% } %>

    <%# Bottone Successivo %>
    <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %><% if (typeof currentReparto !== 'undefined' && currentReparto) { %>&reparto=<%= currentReparto %><% } %><% if (typeof currentTipo !== 'undefined' && currentTipo) { %>&tipo=<%= currentTipo %><% } %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Successivo</span>
        </a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Successivo</span>
        </a>
      </li>
    <% } %>
  </ul>
</nav>
<% } %>

<div class="text-center mt-2 mb-4">
    <% if (totalItems > 0) { %>
        <small>Pagina <%= currentPage %> di <%= totalPages %> (Mostrando <%= list.length %> di <%= totalItems %> elementi totali)</small>
    <% } else { %>
        <small>Nessun elemento da mostrare.</small>
    <% } %>
</div>

